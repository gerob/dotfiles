[user]
	name = Gerob Kimball
	email = gkimball@parrotmarketing.com
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	di = diff --color-words
	ds = diff --stat
	lp = log -p
	graph = log --oneline --decorate --graph
    hist = log --stat --abbrev-commit
	ll = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
	who = !echo \"== Commits by Author:\\n`git shortlog -s -n`\\n\"
	m = merge --no-ff
    report = "log --author=Gerob --since='8 hours ago' --until='now' --format='%Cgreen%ci%Creset %s%Creset' --no-merges"
[core]
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	pager = less -r
[color]
	ui = auto # covers diff = true, status = auto, branch = auto
	interactive = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = white bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

